def calculadora(num1, num2, operacao):
  Args:
    num1: O primeiro número.
    num2: O segundo número.
  
      1: Soma
      2: Subtração
      3: Multiplicação
      4: Divisão

  Returns:
   
  if operacao == 1:
    return num1 + num2
  elif operacao == 2:
    return num1 - num2
  elif operacao == 3:
    return num1 * num2
  elif operacao == 4:
    if num2 == 0:
      return "Divisão por zero!"
    else:
      return num1 / num2
  else:
    return 0
